@model EasyEats.Models.Restaurant
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<form class="container2">

@if (SignInManager.IsSignedIn(User))
{
    <div class="card-body">
        <h4>Chick-fil-A</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestaurantDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestaurantDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestNum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestNum)
            </dd>
        </dl>
    </div>

    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Item Name</th>
                <th>Item Description</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="AddItem" asp-route-id="@item.ID">Add Item</a> |
                    </td>
                </tr>
            }
        </table>
    </dd>
}
else
{
    <div>
        <h4>Chick-fil-A</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestaurantDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestaurantDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RestNum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RestNum)
            </dd>
        </dl>
    </div>

    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Item Name</th>
                <th>Item Description</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="NoUserAddItem" asp-route-id="@item.ID">Add Item</a> |
                    </td>
                </tr>
            }
        </table>
    </dd>
}
</form>